<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <android.support.v4.view.ViewPager
        android:id="@+id/guide_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <Button
        android:id="@+id/guide_goactivity_but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_guide_goactivity_selector"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        android:layout_above="@+id/guide_circleIndicator"/>
    <com.lzy.widget.tab.CircleIndicator
        android:id="@+id/guide_circleIndicator"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="35.5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        app:ci_normalRadiusColor="@color/white"
        app:ci_selectedRadiusColor="@color/blue_3"
        app:ci_dotPadding="21dp"
        app:ci_selectedRadius="6dp"
        app:ci_normalRadius="5dp"/>
</RelativeLayout>
