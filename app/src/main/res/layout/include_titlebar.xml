<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:clickable="true"
              android:orientation="vertical">

    <View
        android:id="@+id/titlebar_status_bar_fix"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#345"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <View
            android:id="@+id/titlebar_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#345"/>
        <RelativeLayout
            android:id="@+id/titlebar_back_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/titlebar_back_img"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/titlebar_back_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/titlebar_back_img"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

        <ImageView
            android:id="@+id/titlebar_more_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
           />

        <TextView
            android:id="@+id/titlebar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#FFF"
            android:textSize="18sp"/>
    </RelativeLayout>
</LinearLayout>